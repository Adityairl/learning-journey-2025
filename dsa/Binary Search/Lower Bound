class Solution {
  public:
    int lowerBound(vector<int>& arr, int x) {
        // code here
        int n = arr.size();
        int ans = n;
        int l = 0;
        int h = n-1;
        
        while(l<=h){
            int mid = (l+h)/2;
            if(arr[mid]>=x){
                ans = mid;
                h = mid -1;
            }
            else{
                l = mid + 1;
            }
        }
        return ans;
    }
};
